{
    "name": "railt/compiler",
    "type": "library",
    "description": "The Railt Compiler Parser-Generator",
    "license": "MIT",
    "keywords": [
        "compiler",
        "grammar",
        "language",
        "pp",
        "ast"
    ],
    "homepage": "http://railt.org",
    "support": {
        "issues": "https://github.com/railt/railt/issues",
        "source": "https://github.com/railt/compiler"
    },
    "authors": [
        {
            "name": "Kirill Nesmeyanov",
            "email": "nesk@xakep.ru"
        }
    ],
    "require": {
        "php": ">=7.1.3",
        "ext-json": "*",
        "ext-mbstring": "*",
        "ext-pcre": "*",
        "ext-spl": "*",
        "railt/io": "2.*|dev-master",
        "railt/lexer": "2.*|dev-master",
        "railt/parser": "2.*|dev-master",
        "zendframework/zend-code": "~3.0"
    },
    "autoload": {
        "psr-4": {
            "Railt\\Compiler\\": "src"
        }
    },
    "require-dev": {
        "symfony/finder": "~4.0",
        "phpunit/phpunit": "^6.5",
        "railt/console": "2.*|dev-master"
    },
    "autoload-dev": {
        "psr-4": {
            "Railt\\Tests\\Compiler\\": "tests"
        }
    },
    "suggest": {
        "railt/console": "(1.2.*) Console scripts support"
    },
    "extra": {
        "railt": {
            "commands": [
                "Railt\\Compiler\\Console\\GrammarCompileCommand",
                "Railt\\Compiler\\Console\\CompileCommand",
                "Railt\\Compiler\\Console\\AnalyzeCommand"
            ]
        }
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
